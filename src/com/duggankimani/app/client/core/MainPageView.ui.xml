<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
<g:HTMLPanel styleName="rootcontainer">
	    
    <!-- header -->
    <g:HTMLPanel ui:field="headerContainer">
    </g:HTMLPanel>
	
	<g:HTMLPanel ui:field="rootPanel" styleName="mainContainer">   
	    <g:HTMLPanel ui:field="left" styleName="left">
	        <div>
	            <g:HTMLPanel ui:field="menuContainer"></g:HTMLPanel>
	        </div>
	        <span ui:field="loadingComponent" style="background-color:yellow">loading...</span>	 	    		        
	        
	    </g:HTMLPanel>
	    
	    <div class="center">
	    	<g:HTMLPanel styleName="headerDoc" ui:field="container">	        
	    	</g:HTMLPanel>
	    </div>
	    
	    <g:HTMLPanel ui:field="right" styleName="right">  
	       <g:HTMLPanel ui:field="actionsContainer" styleName="actionspanel"></g:HTMLPanel>
	       <hr/>
	       <g:HTMLPanel ui:field="relatedcontainer" styleName="reatedDocsPanel">Related documents</g:HTMLPanel>    
	    </g:HTMLPanel>
	   
	</g:HTMLPanel>
</g:HTMLPanel>
</ui:UiBinder>
