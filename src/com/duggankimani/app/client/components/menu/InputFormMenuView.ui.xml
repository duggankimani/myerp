<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	 xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
	 xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	 xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	 xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

    <ui:style>
    .menuBorder {
        border-top: none;
    }
    .margin {
       margin: 10px;
     }
  </ui:style>
  
    <g:VerticalPanel>
	<g:HorizontalPanel width="350px">
	    <toolbar:ToolBar borders="true">
	        <button:TextButton text="New"></button:TextButton>
	        <toolbar:SeparatorToolItem />
	        <button:TextButton text="Edit"></button:TextButton>
	        <toolbar:SeparatorToolItem />
	        <button:TextButton text="Undo"></button:TextButton>
	        <toolbar:SeparatorToolItem />
	        <button:TextButton text="Copy"></button:TextButton>	        
	        <toolbar:SeparatorToolItem />
	        <button:TextButton text="Actions" ui:field="btnActions">
	            <button:menu>
	                <menu:Menu ui:field="actionMenu">
              		</menu:Menu>
	            </button:menu>
	        </button:TextButton>
	        <toolbar:SeparatorToolItem />
	        <button:TextButton ui:field="prev" text="Previous"/>
	        <button:TextButton ui:field="next" text="Next"/>
	        <toolbar:SeparatorToolItem />
	    </toolbar:ToolBar>
	</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>
